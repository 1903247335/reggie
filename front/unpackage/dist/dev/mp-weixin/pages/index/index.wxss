.popup {
  border: 5px;
}
.popup .head {
  padding: 15px;
  display: flex;
  justify-content: space-between;
}
.popup .head .title {
  font-size: 50rpx;
  font-weight: bold;
}
.popup .popup-content {
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 15px;
  height: 450rpx;
  background-color: #fff;
  overflow: auto;
}
.active-btn {
  background: #ffb100 !important;
}
.main-contain {
  margin-top: 130rpx;
  width: 100%;
  display: flex;
}
.main-contain .left-menu {
  width: 25%;
  height: 500rpx;
  overflow: auto;
}
.main-contain .left-menu .item {
  font-size: 26rpx;
  padding: 30rpx;
  color: #847f84;
}
.main-contain .left-menu .active {
  background: white;
  color: black;
}
.main-contain .right-goods {
  height: 700rpx;
  overflow: auto;
  width: 75%;
}
.user {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 80rpx;
  left: 40rpx;
  z-index: 999;
}
.user image {
  width: 100%;
  height: 100%;
}
.top-contain {
  position: absolute;
  background: white;
  width: 90%;
  z-index: 9;
  margin: 20px;
  border-radius: 10px;
  height: 240rpx;
  top: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.top-contain .top {
  display: flex;
}
.top-contain .top .top-left {
  margin-right: 2rpx;
}
.top-contain .top .top-left image {
  width: 94rpx;
  height: 94rpx;
}
.top-contain .top .top-right {
  margin-left: 3px;
}
.top-contain .top .top-right .right-title {
  letter-spacing: 1px;
}
.top-contain .top .top-right .right-info {
  margin-top: 8px;
  display: flex;
}
.top-contain .top .top-right .right-info .item {
  margin-right: 5px;
  display: flex;
}
.top-contain .top .top-right .right-info .item image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 2px;
}
.top-contain .top .top-right .right-info .item text {
  font-size: 25rpx;
  letter-spacing: 1px;
}
.top-contain .bottom {
  margin-top: 20rpx;
}
.top-contain .bottom .introduction {
  color: #c1bcc2;
  font-size: 12px;
}
.bottom-contain {
  position: absolute;
  bottom: 40rpx;
  display: flex;
  width: 80%;
  justify-content: space-between;
  align-items: center;
  left: 0;
  right: 0;
  background: #040109;
  margin: 0 auto;
  height: 100rpx;
  border-radius: 50px;
}
.bottom-contain .img {
  position: relative;
}
.bottom-contain .left {
  display: flex;
}
.bottom-contain .badge {
  right: 0;
  top: 0;
  display: block;
  position: absolute;
  color: white;
  width: 50rpx;
  height: 50rpx;
  background: #ff9e72;
  border-radius: 50%;
  font-size: 27rpx;
  text-align: center;
  line-height: 50rpx;
}
.bottom-contain image {
  width: 130rpx;
  height: 130rpx;
}
.bottom-contain .price {
  vertical-align: bottom;
  color: wheat;
  font-size: 40rpx;
  line-height: 130rpx;
}
.bottom-contain button {
  background: #9a989d;
  border-radius: 40rpx;
  height: 100rpx;
  width: 200rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #f1ecf6;
}
.backgroundImage {
  width: 100%;
  height: 304rpx;
}
